{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}
{% block page_title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Gestion des Utilisateurs</h2>
                {% if tab == 'teachers' %}
                    <a href="{{ path('admin_create_teacher') }}" class="btn btn-primary">
                        <i class="bi bi-person-plus me-1"></i>Nouveau Professeur
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link {{ tab == 'requests' ? 'active' : '' }}" href="{{ path('admin_users', {tab: 'requests'}) }}">
                <i class="bi bi-person-check me-1"></i>Demandes d'inscription
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{ tab == 'teachers' ? 'active' : '' }}" href="{{ path('admin_users', {tab: 'teachers'}) }}">
                <i class="bi bi-person-video3 me-1"></i>Enseignants
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{ tab == 'students' ? 'active' : '' }}" href="{{ path('admin_users', {tab: 'students'}) }}">
                <i class="bi bi-people me-1"></i>Étudiants
            </a>
        </li>
    </ul>

    <!-- Search & Filters -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <input type="hidden" name="tab" value="{{ tab }}">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" name="q" class="form-control border-start-0 ps-0" placeholder="Rechercher par nom, email..." value="{{ search }}">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-secondary w-100">Filtrer</button>
                </div>
                 {% if search %}
                    <div class="col-md-2">
                        <a href="{{ path('admin_users', {tab: tab}) }}" class="btn btn-outline-secondary w-100">Effacer</a>
                    </div>
                {% endif %}
            </form>
        </div>
    </div>

    <!-- List -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Utilisateur</th>
                            <th>Contact</th>
                            <th>Statut</th>
                            {% if tab == 'teachers' %}
                                <th>Spécialité</th>
                            {% elseif tab == 'students' %}
                                <th>Niveau</th>
                            {% else %}
                                <th>Demandé le</th>
                            {% endif %}
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        {# Optional Avatar #}
                                        <div class="avatar-circle bg-light text-primary me-3 fw-bold d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%;">
                                            {{ user.firstName|first|upper }}{{ user.lastName|first|upper }}
                                        </div>
                                        <div>
                                            <div class="fw-bold">{{ user.firstName }} {{ user.lastName }}</div>
                                            <small class="text-muted">ID: #{{ user.id }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    {{ user.email }}
                                </td>
                                <td>
                                    {% if user.status == 'ACTIVE' %}
                                        <span class="badge bg-success-subtle text-success">Actif</span>
                                    {% elseif user.status == 'PENDING' %}
                                        <span class="badge bg-warning-subtle text-warning">En attente</span>
                                    {% elseif user.status == 'BANNED' %}
                                        <span class="badge bg-danger-subtle text-danger">Banni</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ user.status }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if tab == 'teachers' %}
                                        {{ user.specialty ?? '-' }}
                                    {% elseif tab == 'students' %}
                                        {{ user.specialty ?? 'N/A' }} <span class="text-muted">•</span> {{ user.studyYear ?? 'N/A' }}
                                    {% else %}
                                        {{ user.createdAt|date('d/m/Y') }}
                                    {% endif %}
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-inline-flex gap-2">
                                        {% if user.status == 'PENDING' %}
                                            <form method="post" action="{{ path('admin_activate_user', {id: user.id}) }}">
                                                <input type="hidden" name="_token" value="{{ csrf_token('activate_user_' ~ user.id) }}">
                                                <button class="btn btn-sm btn-success" title="Approuver"><i class="bi bi-check-lg"></i></button>
                                            </form>
                                        {% endif %}
                                        
                                        {% if user.status == 'BANNED' %}
                                            <form method="post" action="{{ path('admin_unban_user', {id: user.id}) }}">
                                                <input type="hidden" name="_token" value="{{ csrf_token('unban_user_' ~ user.id) }}">
                                                <button class="btn btn-sm btn-outline-success" title="Débannir"><i class="bi bi-unlock"></i></button>
                                            </form>
                                        {% elseif user.status == 'ACTIVE' %}
                                            <form method="post" action="{{ path('admin_ban_user', {id: user.id}) }}">
                                                <input type="hidden" name="_token" value="{{ csrf_token('ban_user_' ~ user.id) }}">
                                                <button class="btn btn-sm btn-outline-danger" title="Bannir"><i class="bi bi-slash-circle"></i></button>
                                            </form>
                                        {% endif %}
                                        
                                        {# Reject pending serves as ban effectively, or delete?? Use Ban action for now as per previous logic #}
                                        {% if user.status == 'PENDING' %}
                                            <form method="post" action="{{ path('admin_ban_user', {id: user.id}) }}">
                                                <input type="hidden" name="_token" value="{{ csrf_token('ban_user_' ~ user.id) }}">
                                                <button class="btn btn-sm btn-outline-danger" title="Rejeter"><i class="bi bi-x-lg"></i></button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-3 opacity-50"></i>
                                    Aucun utilisateur trouvé.
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Pagination -->
        {% if pagesCount > 1 %}
        <div class="card-footer bg-white py-3">
             <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item {{ currentPage == 1 ? 'disabled' : '' }}">
                        <a class="page-link" href="{{ path('admin_users', {tab: tab, q: search, page: currentPage - 1}) }}">Précédent</a>
                    </li>
                    {% for i in 1..pagesCount %}
                        <li class="page-item {{ currentPage == i ? 'active' : '' }}">
                            <a class="page-link" href="{{ path('admin_users', {tab: tab, q: search, page: i}) }}">{{ i }}</a>
                        </li>
                    {% endfor %}
                    <li class="page-item {{ currentPage == pagesCount ? 'disabled' : '' }}">
                        <a class="page-link" href="{{ path('admin_users', {tab: tab, q: search, page: currentPage + 1}) }}">Suivant</a>
                    </li>
                </ul>
            </nav>
        </div>
        {% endif %}
    </div>
{% endblock %}
