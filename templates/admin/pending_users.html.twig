{% extends 'base.html.twig' %}

{% block title %}Comptes en attente{% endblock %}

{% block body %}
    <div class="d-flex align-items-center mb-4">
        <div class="bg-warning bg-opacity-10 p-2 rounded-circle me-3 text-warning">
            <i class="bi bi-clock-history fs-4"></i>
        </div>
        <div>
            <h4 class="fw-bold mb-0">Comptes en attente</h4>
            <p class="text-muted mb-0 small">Validez les inscriptions des nouveaux utilisateurs</p>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            {% if pendingUsers is empty %}
                <div class="text-center py-5">
                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486777.png" alt="Check" style="width: 80px; opacity: 0.5;" class="mb-3">
                    <h5>Tout est à jour !</h5>
                    <p class="text-muted">Aucun compte en attente de validation pour le moment.</p>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table align-middle table-hover">
                        <thead class="bg-light">
                        <tr>
                            <th class="border-0 rounded-start">Utilisateur</th>
                            <th class="border-0">Spécialité</th>
                            <th class="border-0">Date d'inscription</th>
                            <th class="border-0 rounded-end text-end">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in pendingUsers %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white me-3">
                                            {{ user.firstName|first|upper }}{{ user.lastName|first|upper }}
                                        </div>
                                        <div>
                                            <div class="fw-bold">{{ user.firstName }} {{ user.lastName }}</div>
                                            <div class="text-muted small">{{ user.email }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">
                                        {{ user.specialty ?? 'N/A' }} 
                                        {% if user.studyYear %} • {{ user.studyYear }}{% endif %}
                                    </span>
                                </td>
                                <td class="text-muted small">
                                    {{ user.createdAt|date('d/m/Y H:i') }}
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <form method="post" action="{{ path('admin_activate_user', {id: user.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('activate_user_' ~ user.id) }}">
                                            <button class="btn btn-success btn-sm fw-bold px-3">
                                                <i class="bi bi-check-lg me-1"></i>Approuver
                                            </button>
                                        </form>
                                        <form method="post" action="{{ path('admin_ban_user', {id: user.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('ban_user_' ~ user.id) }}">
                                            <button class="btn btn-outline-danger btn-sm" title="Rejeter/Bannir">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
