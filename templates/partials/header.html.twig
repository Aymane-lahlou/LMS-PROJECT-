<header class="top-header">
    <div class="d-flex align-items-center">
        <button class="btn btn-link d-lg-none me-3" id="sidebarToggle">
            <i class="bi bi-list fs-4"></i>
        </button>
        <h4 class="mb-0 d-none d-md-block">{% block page_title %}{% endblock %}</h4>
    </div>

    <div class="header-search d-none d-md-block mx-auto">
        <!-- Optional global search -->
    </div>

    <div class="header-profile">
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="user-info me-3 d-none d-sm-block">
                    <span class="user-name">
                        {{ app.user ? app.user.firstName ~ ' ' ~ app.user.lastName : '' }}
                    </span>
                    <span class="user-role">
                        {% if app.user %}
                            {% if 'ROLE_ADMIN' in app.user.roles %}Admin
                            {% elseif 'ROLE_TEACHER' in app.user.roles %}Enseignant
                            {% elseif 'ROLE_STUDENT' in app.user.roles %}Étudiant
                            {% endif %}
                        {% endif %}
                    </span>
                </div>
                <div class="user-avatar shadow-sm">
                    {% if app.user %}
                        {{ app.user.firstName|first|upper }}{{ app.user.lastName|first|upper }}
                    {% else %}
                        <i class="bi bi-person"></i>
                    {% endif %}
                </div>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0" aria-labelledby="userDropdown">
                {% if app.user %}
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Mon Profil</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right me-2"></i>Déconnexion</a></li>
                {% else %}
                    <li><a class="dropdown-item" href="{{ path('app_login') }}">Connexion</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</header>
