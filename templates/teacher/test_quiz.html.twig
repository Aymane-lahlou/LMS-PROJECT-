{% extends 'base.html.twig' %}

{% block title %}Test Mode : {{ quiz.title }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-warning border-2 d-flex align-items-center mb-4">
                <i class="bi bi-cone-striped fs-3 me-3"></i>
                <div>
                    <h4 class="alert-heading fw-bold mb-0">Mode Test Enseignant</h4>
                    <p class="mb-0">Vous simulez ce quiz. Aucune tentative ne sera enregistrée dans la base de données.</p>
                </div>
            </div>

            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-white p-4 border-bottom-0">
                    <h2 class="fw-bold text-primary mb-1">{{ quiz.title }}</h2>
                    <p class="text-muted mb-0">{{ quiz.description }}</p>
                </div>
            </div>

            <form method="post">
                {% for question in questions %}
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-3">Question {{ loop.index }}</h5>
                            <p class="lead mb-4">{{ question.question }}</p>
                            
                            <div class="list-group">
                                {% for choice in question.choices %}
                                    <label class="list-group-item list-group-item-action d-flex align-items-center gap-3 p-3">
                                        <input class="form-check-input flex-shrink-0" type="radio" name="answers[{{ loop.parent.loop.index0 }}]" value="{{ loop.index0 }}" required>
                                        <span class="form-check-label stretched-link">{{ choice }}</span>
                                    </label>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="d-flex justify-content-end gap-3 mb-5">
                     <a href="{{ path('teacher_edit_quiz', {id: quiz.id}) }}" class="btn btn-light btn-lg">Quitter le test</a>
                    <button type="submit" class="btn btn-primary btn-lg px-5">Soumettre le test</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
