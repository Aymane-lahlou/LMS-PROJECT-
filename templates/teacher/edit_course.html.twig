{% extends 'base.html.twig' %}

{% block title %}Modifier le cours : {{ course.title }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="d-flex align-items-center mb-4">
            <a href="{{ path('teacher_dashboard') }}" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="fw-bold mb-0">Modifier le cours</h2>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                {% if formErrors|length > 0 %}
                    <div class="alert alert-danger">
                        {% for error in formErrors %}{{ error }}<br>{% endfor %}
                    </div>
                {% endif %}

                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" name="_token" value="{{ csrf_token('teacher_edit_course_' ~ course.id) }}">
                    
                    <div class="row g-4 mb-4">
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Image de couverture</label>
                            <div class="card bg-light border-0 mb-3">
                                <div class="card-body text-center p-0" style="height: 200px; overflow: hidden;">
                                    {% if course.coursePicture and course.coursePicture != 'default-course.jpg' %}
                                        <img src="{{ course.coursePicture starts with 'http' ? course.coursePicture : asset(course.coursePicture) }}" class="w-100 h-100 object-fit-cover" id="preview-image">
                                    {% else %}
                                        <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                                            <i class="bi bi-image fs-1 opacity-25"></i>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label">Titre du cours</label>
                                <input type="text" name="title" class="form-control form-control-lg fw-bold" value="{{ course.title }}" required>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Changer l'image</label>
                                <input type="file" name="course_picture_file" class="form-control" accept="image/*">
                                <div class="form-text">Ou utiliser une URL externe :</div>
                                <input type="text" name="course_picture_url" class="form-control form-control-sm mt-1" placeholder="https://..." value="{{ course.coursePicture starts with 'http' ? course.coursePicture : '' }}">
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="5">{{ course.description }}</textarea>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Spécialité</label>
                            <select name="specialty" class="form-select" required>
                                {% for specialty in specialties %}
                                    <option value="{{ specialty }}" {{ course.specialty == specialty ? 'selected' : '' }}>{{ specialty }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Année cible</label>
                            <select name="target_year" class="form-select" required>
                                {% for year in studyYears %}
                                    <option value="{{ year }}" {{ course.targetYear == year ? 'selected' : '' }}>{{ year }}e Année</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                        <a href="{{ path('teacher_dashboard') }}" class="btn btn-light">Annuler</a>
                        <button type="submit" class="btn btn-primary px-4 fw-bold">Enregistrer les modifications</button>
                    </div>
                </form>
            </div>
        </div>
        
                </form>
            </div>
        </div>
        
        <!-- Lessons Management Section -->
        <div class="card mt-4 shadow-sm border-0">
             <div class="card-header bg-white p-4 border-bottom-0">
                 <div class="d-flex justify-content-between align-items-center">
                     <h4 class="fw-bold mb-0">Contenu du cours</h4>
                     <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#createLessonModal">
                         <i class="bi bi-plus-circle me-1"></i>Nouvelle leçon
                     </button>
                 </div>
             </div>
             <div class="card-body p-0">
                {% if course.lessons is empty %}
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-journal-album fs-1 opacity-25"></i>
                        <p class="mt-2">Ce cours ne contient aucune leçon pour l'instant.</p>
                    </div>
                {% else %}
                    <div class="list-group list-group-flush">
                        {% for lesson in course.lessons %}
                        <div class="list-group-item p-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="mb-0 fw-bold">
                                    <span class="badge bg-light text-dark border me-2">{{ lesson.sortOrder }}</span>{{ lesson.title }}
                                </h5>
                                <div class="btn-group">
                                    <a href="{{ path('teacher_edit_lesson', {id: lesson.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="{{ path('teacher_create_resource', {id: lesson.id}) }}" class="btn btn-outline-success btn-sm" title="Ajouter Ressource">
                                        <i class="bi bi-file-earmark-plus"></i>
                                    </a>
                                     <a href="{{ path('teacher_create_quiz', {id: lesson.id}) }}" class="btn btn-outline-warning btn-sm" title="Ajouter Quiz">
                                        <i class="bi bi-question-circle"></i>
                                    </a>
                                </div>
                            </div>
                            <p class="text-muted small mb-0">{{ lesson.description }}</p>
                            
                            <!-- Detailed Content Preview (Optional) -->
                            {% if lesson.resources|length > 0 or lesson.quizzes|length > 0 %}
                                <div class="mt-3 ps-3 border-start border-3 border-light">
                                    {% for resource in lesson.resources %}
                                        <div class="d-flex align-items-center text-muted small mb-1">
                                            <i class="bi bi-file-pdf me-2"></i>{{ resource.title }}
                                        </div>
                                    {% endfor %}
                                    {% for quiz in lesson.quizzes %}
                                         <div class="d-flex align-items-center text-warning small mb-1">
                                            <i class="bi bi-patch-question me-2"></i>{{ quiz.title }}
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                {% endif %}
             </div>
        </div>

        <!-- Create Lesson Modal -->
        <div class="modal fade" id="createLessonModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form action="{{ path('teacher_create_lesson', {id: course.id}) }}" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title">Ajouter une leçon</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="_token" value="{{ csrf_token('teacher_create_lesson_' ~ course.id) }}">
                            <div class="mb-3">
                                <label class="form-label">Titre</label>
                                <input type="text" name="title" class="form-control" required>
                            </div>
                             <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea name="description" class="form-control" rows="3"></textarea>
                            </div>
                             <div class="mb-3">
                                <label class="form-label">Ordre</label>
                                <input type="number" name="sort_order" class="form-control" value="{{ course.lessons|length + 1 }}">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <button type="submit" class="btn btn-primary">Créer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="card mt-4 shadow-sm border-0 bg-light">
             <div class="card-body p-4">
                 <h5 class="fw-bold mb-3"><i class="bi bi-cone-striped me-2"></i>Zone de danger</h5>
                 <p class="text-muted small">La suppression d'un cours est irréversible et supprimera toutes les leçons, ressources, quiz et progressions d'étudiants associés.</p>
                 <button class="btn btn-outline-danger" disabled title="Fonctionnalité à venir"><i class="bi bi-trash me-1"></i>Supprimer ce cours</button>
             </div>
        </div>
    </div>
</div>
{% endblock %}
