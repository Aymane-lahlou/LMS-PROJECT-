{% extends 'base.html.twig' %}

{% block title %}Explorer les cours{% endblock %}
{% block page_title %}Catalogue des cours{% endblock %}

{% block body %}
    <div class="row justify-content-center mb-5">
        <div class="col-md-8 col-lg-6 text-center">
            <h2 class="fw-bold mb-3">Développez vos compétences</h2>
            <p class="text-muted mb-4">Parcourez les cours sélectionnés pour votre filière <strong>{{ userSpecialty }}</strong> ({{ userYear }}e Année).</p>
            
            <form action="{{ path('student_explore') }}" method="get" class="position-relative">
                <input type="text" name="q" value="{{ searchQuery }}" class="form-control form-control-lg rounded-pill ps-5 shadow-sm border-0" placeholder="Rechercher un cours, un sujet...">
                <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-4 text-muted fs-5"></i>
                {% if searchQuery %}
                    <a href="{{ path('student_explore') }}" class="position-absolute top-50 end-0 translate-middle-y me-3 text-muted text-decoration-none">
                        <i class="bi bi-x-circle-fill"></i>
                    </a>
                {% endif %}
            </form>
        </div>
    </div>

    {% if courses is empty %}
        <div class="text-center py-5">
            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                <i class="bi bi-search fs-1 text-muted"></i>
            </div>
            <h5>Aucun cours trouvé</h5>
            <p class="text-muted">Nous n'avons trouvé aucun cours correspondant à votre recherche pour votre filière.</p>
            {% if searchQuery %}
                <a href="{{ path('student_explore') }}" class="btn btn-outline-primary">Voir tous les cours</a>
            {% endif %}
        </div>
    {% else %}
        <p class="text-muted mb-4">{{ courses|length }} résultat(s) trouvé(s)</p>
        <div class="row g-4">
            {% for course in courses %}
                {% set isEnrolled = course.id in enrolledIds %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 course-card border-0 shadow-sm">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center text-muted position-relative" style="height: 180px; overflow: hidden;">
                            {% if course.coursePicture and course.coursePicture != 'default-course.jpg' %}
                                <img src="{{ course.coursePicture }}" alt="{{ course.title }}" class="w-100 h-100 object-fit-cover">
                            {% else %}
                                <i class="bi bi-book fs-1"></i>
                            {% endif %}
                            
                            {% if isEnrolled %}
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-success shadow-sm"><i class="bi bi-check-circle me-1"></i>Inscrit</span>
                                </div>
                            {% endif %}
                        </div>
                        <div class="card-body d-flex flex-column p-4">
                            <div class="d-flex justify-content-between mb-2">
                                <small class="text-primary fw-bold">{{ course.specialty }}</small>
                                <small class="text-muted">{{ course.targetYear }}e Année</small>
                            </div>
                            <h5 class="card-title fw-bold mb-2">{{ course.title }}</h5>
                            <p class="card-text text-muted small flex-grow-1">{{ course.description|slice(0, 120) }}...</p>
                            
                            <div class="d-flex align-items-center mt-3 mb-4">
                                <div class="avatar-circle bg-light text-primary small me-2" style="width: 24px; height: 24px;">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <span class="text-muted small">{{ course.teacher.email }}</span>
                            </div>

                            <div class="mt-auto pt-3 border-top">
                                {% if isEnrolled %}
                                    <a href="{{ path('student_dashboard') }}" class="btn btn-outline-primary w-100 rounded-pill">
                                        Accéder au cours
                                    </a>
                                {% else %}
                                    <form method="post" action="{{ path('student_enroll_course', {id: course.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('enroll_course_' ~ course.id) }}">
                                        <button class="btn btn-primary w-100 rounded-pill shadow-sm">
                                            S'inscrire gratuitement
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
